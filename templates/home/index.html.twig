{% extends 'base.html.twig' %}

{% block title %}Acceuil
{% endblock %}

{% block body %}
	
	<div class="container " >
		<h1>
			Liste des evenements</h1>
		{% for event in events %}

			<div class="card mb-3" style="max-width: 550px;">
				<div class="row g-0">
					<div class="col-md-4">
						<img src="{{ vich_uploader_asset(event, 'imageFile') }}" class="img-fluid rounded-start" alt="...">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{event.titre}}</h5>
							{# <p class="card-text">{{event.description}} </p> #}
							<p class="card-text">
								<small class="text-muted    ">Le {{ event.created_at|date('Y-m-d')}} à {{ event.created_at|date('H:i') }}</small>
							</p>
                            <p class="card-text"> Lieu: {{ event.lieu }}.</p>
                            <h5 class="card-title">Invité</h5>
							<p class="card-text">{{event.invite}}.</p>
                            
					            <a href="{{path('app_evenement_detail', {'id': event.id})}}" class="btn btn-primary">Voir plus</a>
				            
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>


{% endblock %}
